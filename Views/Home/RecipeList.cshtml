@model IEnumerable<CookAlongAcademy.Models.Recipe>

@{
    ViewData["Title"] = "Recipe List";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <!-- Add other columns as needed -->
        </tr>
    </thead>
    <tbody>
        @foreach (var recipe in Model)
        {
            <tr>
                <td>@recipe.Title</td>
                <!-- Add other columns as needed -->
            </tr>
        }
    </tbody>
</table>

<h2>Upload a Text File</h2>
<form asp-controller="Recipe" asp-action="UploadFile" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <input type="file" class="form-control-file" name="file" accept=".txt" />
    </div>
    <button type="submit" class="btn btn-success">Upload</button>
</form>

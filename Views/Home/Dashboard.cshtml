@{
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>Welcome, @(Model.User != null ? Model.User.Username : "Guest")!</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <h2>Your Recipes</h2>
            <ul>
                @if (Model.Recipes != null)
                {
                    foreach (var recipe in Model.Recipes)
                    {
                        if (recipe != null && recipe.RecipeID != null && recipe.Title != null)
                        {
                            <li>
                                <a href="@Url.Action("Detail", "Recipe", new { id = recipe.RecipeID })">@recipe.Title</a>
                            </li>
                        }
                    }
                }
                else
                {
                    <li>No recipes found.</li>
                }
            </ul>
        </div>
    </div>
</div>
